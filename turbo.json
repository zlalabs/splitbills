{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start:dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "APP_ENV",
        "API_PORT",
        "DATABASE_URL",
        "JWT_SECRET",
        "JWT_EXPIRATION_TIME",
        "NEXT_PUBLIC_URL"
      ]
    },
    "prod:ui": {
      "cache": false,
      "persistent": true
    },
    "prod:api": {
      "cache": false,
      "persistent": true,
      "env": [
        "APP_ENV",
        "API_PORT",
        "DATABASE_URL",
        "JWT_SECRET",
        "JWT_EXPIRATION_TIME",
        "NEXT_PUBLIC_URL"
      ]
    }
  }
}
